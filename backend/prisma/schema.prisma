generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Quiz {
  id        String     @id @default(uuid())
  title     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  questions Question[]
}

model Question {
  id            String   @id @default(uuid())
  quizId        String
  type          String
  text          String
  correctAnswer String
  options       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
}
